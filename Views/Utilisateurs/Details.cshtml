@model AfpaLunch.Utilisateur

@{
    ViewBag.Title = "Details";
}
    <div class="d-flex justify-content-center mb-4">
        <h2>Bonjour @Model.Prenom @Model.Nom !</h2>
    </div>

<div class="d-flex justify-content-center">
    <div class="card" style="width: 40rem;">
        <div class="d-flex justify-content-center mt-3"><i class="fa fa-5x fa-user-circle"></i></div>
        <div class="card-body">
            <p class="card-text">
                <fieldset disabled>
                    <div class="form-group">
                        <label for="disabledTextInput">N° de Matricule</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Matricule">
                    </div>
                    <div class="form-group">
                        <label for="disabledTextInput">Nom</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Nom">
                    </div>
                    <div class="form-group">
                        <label for="disabledTextInput">Prénom</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="@Model.Prenom">
                    </div>
                    <div class="form-group">
                        <label for="disabledTextInput">Mot de passe</label>
                        <input type="text" id="disabledTextInput" class="form-control" placeholder="***********">
                    </div>
                </fieldset>
            </p>
            <p>Vous disposez d'un solde de @Model.Solde€.</p>
            <input data-toggle="modal" data-target="#modalUser" type="submit" class="d-flex justify-content-center mt-2 btn btn-rounded-pill btn-primary" style="border-radius: 20px;" value="Mettre à jour votre mot de passe" />
        </div>
    </div>   
</div>

<div id="modalUser" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="d-flex justify-content-center">
                    @Html.Label("Votre ancien mot de passe")
                </div>

                <div class="d-flex justify-content-center mb-3">
                    @Html.EditorFor(model => model.Matricule, new { htmlAttributes = new { placeholder = "", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Matricule, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-center">
                    @Html.Label("Votre nouveau mot de passe")
                </div>

                <div class="d-flex justify-content-center">
                    @Html.EditorFor(model => model.Matricule, new { htmlAttributes = new { placeholder = "", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Matricule, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-center">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.IdUtilisateur }) |
    @Html.ActionLink("Back to List", "Index")
</p>
