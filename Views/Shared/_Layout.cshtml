
@{
    List<AfpaLunch.Models.Basket> baskets = (List<AfpaLunch.Models.Basket>)Session["Panier"];
    List<AfpaLunch.Models.ProduitPanier> panier = (List<AfpaLunch.Models.ProduitPanier>)HttpContext.Current.Application[Session.SessionID];
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AfpaLunch</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/owl.carousel.min.css")
    @Styles.Render("~/Content/owl.theme.default.min.css")
    @Styles.Render("~/Content/glide.core.css")
    @Styles.Render("~/Content/glide.core.min.css")
    @Styles.Render("~/Content/glide.theme.css")
    @Styles.Render("~/Content/glide.theme.min.css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-sm fixed-top">
        <a class="navbar-brand" href="/Restaurants/">
            <img src="~/Images/logo.png" height="30" alt="logo">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-list-3" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar-list-3">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    @Html.ActionLink("Accueil", "Index", "Restaurants", null, new { @class = "nav-link mr-2" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Restaurants", "Index", "Restaurants", null, new { @class = "nav-link" })
                </li>
            </ul>
            <div class="ml-auto mr-2">
                <a class="nav-item btn btn-primary" href="" data-toggle="modal" data-target="#ModalPanier">
                    <span>Panier</span>
                    @{ if (panier != null)
                        {
                            <span id="chiffrepanier" class="badge badge-light">@panier.Count</span>
                        }
                        else
                        {

                        }
                    }
                </a>
            </div>

            @{ if (Session["Utilisateur"] != null)
                {
                    <div class="" id="on">
                        @Html.ActionLink("Mon Compte", "Home", null, new { @class = "btn btn-outline-danger", @id = "moncompte" })
                        <button class="btn btn-success" id="connected">Connecté(e)</button>
                        @Html.ActionLink("Déconnexion", "Deconnexion", "Home", null, new { @class = "btn btn-outline-danger", @id = "deconnexion" })
                    </div>
                }
                else
                {
                    <div class="" id="off">
                        @Html.ActionLink("Connexion", "Connexion", "Utilisateurs", null, new { @class = "btn btn-outline-danger", @id = "connexion" })
                    </div>
                }
            }
        </div>
    </nav>

    <div class="modal fade" id="ModalPanier" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        @using (@Html.BeginForm("SaveCommande", "Sw"))
        {
            <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Panier</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                            @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                            @{ if (HttpContext.Current.Application[Session.SessionID] != null)
                                {
                                    <div class="row">
                                        @{ foreach (AfpaLunch.Models.ProduitPanier item in panier)
                                            {
                                                try
                                                {
                                                    <div class='col-2'>
                                                        <img src="~/@item.Photo" class="" style="max-width: 100px" />
                                                    </div>
                                                    <div class='col-5'>
                                                        <div class='d-flex flex-column'>
                                                            <div class='row text-wrap h3'>
                                                                @item.Nom
                                                            </div>
                                                            <div class="row text-wrap">
                                                                @item.Description
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-2">@item.Prix€ <span class="badge badge-light">@item.Quantite</span></div>
                                                    <div class="col-2"><a href="" class="plusproduit" data-produit="@item.IdProduit"><i class="fa fa-plus-circle fa-2x"></i></a>&nbsp;<a href="" class="moinsproduit" data-produit="@item.IdProduit"><i class="fa fa-minus-circle fa-2x"></i></a></div>
                                                    <div class="col-1"><a href="" class="removeproduit" data-produit="@item.IdProduit"><i class="fa fa-trash fa-2x"></i></a></div>
                                                }
                                                catch (Exception ex)
                                                {
                                                    string er = ex.Message;
                                                }
                                            }
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="alert alert-info">Votre panier est vide !</p>
                                }
                            }                       
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Fermer</button>
                        <input type="button" id="commander" class="btn btn-outline-success" value="Commander" />
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="footer mt-auto py-3">
        <div class="container">
            <span class="text-muted">&copy; @DateTime.Now.Year - AfpaLunch</span>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/glide")
    @Scripts.Render("~/bundles/owl.carousel")
    @RenderSection("scripts", required: false)


    <script type="text/javascript">
            $(document).ready(function () {

                $("#modalPanier").click(function () {
                    var data = { 'idsession': '@Session.SessionID' };
                    $.ajax({
                        url: '@Url.Action("GetProduits", "Sw")',
                        type: 'POST',
                        data: JSON.stringify(data),
                        contentType: 'application/json; charset=utf-8',
                        dataType: 'json',
                        success: function (data) {
                        },
                        error: function () {
                            alert("Erreur");
                        }
                    })
                });
            });

        $("#commander").click(function () {
            SaveCommandeSw();
        });

           function SaveCommandeSw() {
                    var data = { 'idsession': '@Session.SessionID' };
                    $.ajax({
                        url: '@Url.Action("SaveCommande", "Sw")',
                        type: 'POST',
                        data: JSON.stringify(data),
                        contentType: 'application/json; charset=utf-8',
                        dataType: 'json',
                        success: function (data) {
                            alert("Commande validée !");
                            document.location.href = '/restaurants/index';
                        },
                        error: function () {
                        alert("Erreur");
                        }
                    })
            };

            $('.plusproduit').click(function () {
                var data = { 'idproduit': $(this).data("produit"), 'idsession': '@Session.SessionID' };
                $.ajax({
                    url: '@Url.Action("AddQuantite", "Sw")',
                    type: 'POST',
                    data: JSON.stringify(data),
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    success: function (data) {
                        $("#chiffrepanier").val()
                    },
                    error: function () {
                        alert("Erreur");
                    }
                })
            });

            $('.moinsproduit').click(function () {
                var data = { 'idproduit': $(this).data("produit"), 'idsession': '@Session.SessionID' };
                $.ajax({
                    url: '@Url.Action("RemoveQuantite", "Sw")',
                    type: 'POST',
                    data: JSON.stringify(data),
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    success: function (data) {

                    },
                    error: function () {
                        alert("Erreur");
                    }
                })
            });

            $('.removeproduit').click(function () {
                var data = { 'idproduit': $(this).data("produit"), 'idsession': '@Session.SessionID' };
                $.ajax({
                    url: '@Url.Action("RemoveProduit", "Sw")',
                    type: 'POST',
                    data: JSON.stringify(data),
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    success: function (data) {

                    },
                    error: function () {
                        alert("Erreur");
                    }
                })
            });
    </script>
</body>
</html>
