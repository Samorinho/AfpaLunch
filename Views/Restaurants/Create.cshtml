            //    accept: function (file, done) {

            //    },
            //    acceptedFiles: "images/jpg",
            //    dictDefaultMessage: "Test",

            //};

            //myDropzone.on("complete", function (file) {
            //    myDropzone.removeFile(file);
            //});

        });
    </script>
}
